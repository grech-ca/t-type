{
  "compilerOptions": {
    "declaration": true,
    "outDir": "bin",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "bin"]
}
